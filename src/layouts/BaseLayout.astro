---
const { title = "Diego Barrio H.", description = "Backend Engineer. Java, Spring Boot, Microservices, Observability. Proyectos y CV." } = Astro.props;

const GA_ID = "G-7DJQHEPKJK";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <link rel="icon" type="image/svg+xml" href="/img/dbh2-black.svg" />
    <link rel="stylesheet" href="/styles.css" />

    <script async src={`https://www.googletagmanager.com/gtag/js?id=${GA_ID}`}></script>

    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "G-7DJQHEPKJK");
    </script>
  </head>

  <body>
    <slot />
    <script>
      const storageKey = "theme";
      const root = document.documentElement;
      const toggle = document.getElementById("theme-toggle");
      const langKey = "lang";
      const langToggle = document.getElementById("lang-toggle");

      const getPreferred = () => (window.matchMedia("(prefers-color-scheme: light)").matches ? "light" : "dark");
      const getPreferredLang = () => {
        const lang = (navigator.language || "en").toLowerCase();
        return lang.startsWith("es") ? "es" : "en";
      };

      const applyTheme = (theme) => {
        root.setAttribute("data-theme", theme);
      };
      const applyLang = (lang) => {
        root.setAttribute("data-lang", lang);
        root.setAttribute("lang", lang);
        if (langToggle) {
          langToggle.setAttribute("aria-label", lang === "es" ? "Switch to English" : "Cambiar a espaÃ±ol");
        }
      };

      const stored = localStorage.getItem(storageKey);
      applyTheme(stored || getPreferred());

      toggle?.addEventListener("click", () => {
        const current = root.getAttribute("data-theme") || getPreferred();
        const next = current === "light" ? "dark" : "light";
        applyTheme(next);
        localStorage.setItem(storageKey, next);
      });

      const storedLang = localStorage.getItem(langKey);
      applyLang(storedLang || getPreferredLang());

      langToggle?.addEventListener("click", () => {
        const current = root.getAttribute("data-lang") || getPreferredLang();
        const next = current === "es" ? "en" : "es";
        applyLang(next);
        localStorage.setItem(langKey, next);
      });
    </script>
  </body>
</html>
