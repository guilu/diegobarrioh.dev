const socials = [
  {
    label: "LinkedIn",
    href: "https://www.linkedin.com/in/diegobarrioh",
    emoji: "üíº",
    img: "/img/linkedin-screenshot.png",
  },
  {
    label: "GitHub",
    href: "https://github.com/guilu",
    emoji: "üíª",
    img: "/img/github-screenshot.png",
  },
  {
    label: "X / Twitter",
    href: "https://x.com/guilu",
    emoji: "üõ∞Ô∏è",
    img: "/img/x-screenshot.png",
  },
  {
    label: "Email",
    href: "mailto:diegobarrioh@gmail.com",
    emoji: "‚úâÔ∏è",
    imgLight: "/img/dbh2-black.svg",
    imgDark: "/img/dbh2-white.svg",
  },
