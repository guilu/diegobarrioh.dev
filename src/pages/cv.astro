---

<BaseLayout title="CV — Diego Barrio H.">
  <Nav current="cv" />
  <main class="container">
    <h1>CV</h1>
    <p class="i18n" data-lang="es">{summary.es}</p>
    <p class="i18n" data-lang="en">{summary.en}</p>

    <div class="btns">
      <a class="btn primary" href="/pdf/diegobarrioh_mk4.pdf" target="_blank" rel="noreferrer">
        <span class="i18n inline" data-lang="es">Abrir CV en PDF</span>
        <span class="i18n inline" data-lang="en">Open CV PDF</span>
      </a>
      <a class="btn" href="/">
        <span class="i18n inline" data-lang="es">Volver</span>
        <span class="i18n inline" data-lang="en">Back</span>
      </a>
    </div>

    <section class="section">
      <h2>
        <span class="i18n inline" data-lang="es">Experiencia</span>
        <span class="i18n inline" data-lang="en">Experience</span>
      </h2>
      <div class="timeline">
        {experience.map((e) => (
          <article class="card">
            <p class="eyebrow">
              <span class="i18n inline" data-lang="es">{e.periodEs}</span>
              <span class="i18n inline" data-lang="en">{e.periodEn}</span>
            </p>
            <h3 style="margin:0 0 4px;">
              <span class="i18n inline" data-lang="es">{e.roleEs}</span>
              <span class="i18n inline" data-lang="en">{e.roleEn}</span>
            </h3>
            <p class="small" style="margin:0 0 8px;">{e.company}</p>
            <ul class="list">
              {e.bullets.map((b) => (
                <li>
                  <span class="i18n inline" data-lang="es">{b.es}</span>
                  <span class="i18n inline" data-lang="en">{b.en}</span>
                </li>
              ))}
            </ul>
          </article>
        ))}
      </div>
    </section>

    <section class="section">
      <h2>
        <span class="i18n inline" data-lang="es">Skills</span>
        <span class="i18n inline" data-lang="en">Skills</span>
      </h2>
      <div class="grid">
        <article class="card">
          <p class="eyebrow">
            <span class="i18n inline" data-lang="es">Experto</span>
            <span class="i18n inline" data-lang="en">Expert</span>
          </p>
          <p class="taglist taglist-expert">{skills.expert.map((s) => <span class="pill">{s}</span>)}</p>
        </article>
        <article class="card">
          <p class="eyebrow">
            <span class="i18n inline" data-lang="es">Avanzado</span>
            <span class="i18n inline" data-lang="en">Advanced</span>
          </p>
          <p class="taglist taglist-advanced">{skills.advanced.map((s) => <span class="pill">{s}</span>)}</p>
        </article>
        <article class="card">
          <p class="eyebrow">
            <span class="i18n inline" data-lang="es">Competente</span>
            <span class="i18n inline" data-lang="en">Proficient</span>
          </p>
          <p class="taglist taglist-proficient">{skills.proficient.map((s) => <span class="pill">{s}</span>)}</p>
        </article>
        <article class="card">
          <p class="eyebrow">
            <span class="i18n inline" data-lang="es">En aprendizaje</span>
            <span class="i18n inline" data-lang="en">Learning focus</span>
          </p>
          <p class="taglist taglist-learning">{skills.learning.map((s) => <span class="pill">{s}</span>)}</p>
        </article>
      </div>
    </section>

    <section class="section">
      <h2>
        <span class="i18n inline" data-lang="es">Educación</span>
        <span class="i18n inline" data-lang="en">Education</span>
      </h2>
      <div class="grid">
        {education.map((e) => (
          <article class="card">
            <h3 style="margin:0 0 6px;">
              <span class="i18n inline" data-lang="es">{e.titleEs}</span>
              <span class="i18n inline" data-lang="en">{e.titleEn}</span>
            </h3>
            <p class="small" style="margin:0;">
              {e.org} ·
              <span class="i18n inline" data-lang="es"> {e.periodEs}</span>
              <span class="i18n inline" data-lang="en"> {e.periodEn}</span>
            </p>
          </article>
        ))}
